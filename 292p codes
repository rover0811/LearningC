#include <stdio.h>
void input_num(int *lotto_num);
void print_num(int *lotto_num);

int main(void) {
int lotto_num[6]={0};

input_num(lotto_num);
print_num(lotto_num);

return 0;
}

void input_num(int* lotto_num) {
for (int i = 0; i < 6; i++) {
printf("번호 입력 :");
scanf_s("%d", lotto_num[i]);

	for (int j = 0; j < i; j++) {

		if (lotto_num[j] == lotto_num[i]) {
			printf("같은 번호가 있습니다!\\n");
			i--;
			break;
		}}
}}

void print_num(int* lotto_num){
printf("로또 번호 :");
for (int i = 0; i < 6; i++) {
printf("%5d", lotto_num[i]);
}
}
